{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            {#{{ dump(post) }}#}
            <tr>
                <th>Createdat</th>
                <td>{% if post.createdAt is defined %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{% if post.updateAt is defined %}{{ post.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                {# o 'is defined' verifica se a vari√°vel ou o campo existe  #}
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
